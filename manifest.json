{
  "manifest_version": 2,
 
  "name": "Allegro Cleaner",
  "version": "0.0.1",
  "description": "Usuwa zduplikowane artyku≈Çy z listingu na allegro",
   "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "bookmarks",
    "contentSettings",
    "notifications",
    "pageCapture",
    "storage",
    "webNavigation"
  ],
  
  "browser_action": {
   },
  
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://allegro.pl/*"]
  }],
  
  "background": {
		"scripts": ["background.js"]
	}
 
}